<div class="container mt-4">
  <h1 class="mb-4">Products</h1>
  <div class="mb-4 text-end">
    <%= link_to 'New Product', new_product_path, class: 'btn btn-primary' %>
  </div>
  <table class="table table-bordered table-striped">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Image</th>
        <th scope="col">Name</th>
        <th scope="col">Price</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td>
            <% if product.image.attached? %>
              <img src="<%= url_for(product.image) %>" alt="<%= product.name %>" style="height: 60px;">
            <% else %>
              <span>No image</span>
            <% end %>
          </td>
          <td><%= product.name %></td>
          <td><%= number_to_currency ( product.price) %></td>
          <td>
            <%= link_to 'Edit Product', edit_product_path(product), class: 'btn btn-sm btn-warning' %>
            <%= link_to 'Delete Product', product_path(product), data:{
              turbo_method: :delete,
              turbo_confirm: "Are you sure you want to delete this product?"
            }, class: 'btn btn-sm btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
