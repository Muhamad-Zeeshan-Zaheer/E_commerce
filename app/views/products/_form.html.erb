<div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><%=@product.new_record? ? 'New Product' : 'Edit Product'%> </h5>

      <%= form_with model: @product do |form| %>
        <div class="mb-3"> 
          <%= form.label :Name, class: "form-label" %>
          <%= form.text_field :name, class: "form-control",placeholder:"Enter the item name"%> 
        </div>

        <div class="mb-3"> 
          <%= form.label :Description, class: "form-label" %>
          <%= form.rich_text_area :Description, class: "form-control",placeholder:"Enter the item name"%> 
        </div>

        <div class="mb-3">
          <%=form.label :price, class:"form-label"%>
          <%=form.number_field :price, class: "form-control" , placeholder: "Enter the price of item"%>
        </div>        
        <div class="mb-3 text-end me-2">
          <%= form.submit class: "btn btn-success" %> 
        </div>
      <% end %>
    </div>
  </div>
</div>