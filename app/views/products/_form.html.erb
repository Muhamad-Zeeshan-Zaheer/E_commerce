<div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
  <div class="card" style="width: 24rem;">
    <div class="card-body">
      <h5 class="card-title text-center mb-4">
        <%= @product.new_record? ? 'New Product' : 'Edit Product' %>
      </h5>

      <%= form_with model: @product, local: true do |form| %>
        <div class="mb-3">
          <%= form.label :name, 'Name', class: "form-label" %>
          <%= form.text_field :name, class: "form-control", placeholder: "Enter the item name" %>
        </div>

        <div class="mb-3">
          <%= form.label :description, 'Description', class: "form-label" %>
          <%= form.text_area :description, class: "form-control", placeholder: "Enter the item description" %>
        </div>

        <div class="mb-3">
          <%= form.label :price, 'Price', class: "form-label" %>
          <%= form.number_field :price, class: "form-control", placeholder: "Enter the price of item" %>
        </div>

        <div class="mb-3">
          <%= form.label :image, 'Image', class: "form-label" %>
          <%= form.file_field :image, class: "form-control" %>

          <% if @product.image.attached? %>
            <div class="mt-2">
              <strong> <%= @product.image.filename.to_s %>
              </strong><br>
            </div>
          <% else %>
            <p class="text-muted mt-2">No image uploaded.</p>
          <% end %>
        </div>

        <div class="text-end">
          <%= form.submit  class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
