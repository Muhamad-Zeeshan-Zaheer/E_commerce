
<div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h4 class="text-success">Sign up</h4>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :first_name, class: "form-label mt-1 mb-3" %>
          <%= f.text_field :first_name, class: "form-control", required: true, placeholder: "Enter the first Name" %>
        </div>

        <div class="form-group">
          <%= f.label :last_name, class: "form-label mt-1 mb-3" %>
          <%= f.text_field :last_name, class: "form-control", required: true, placeholder: "Enter last Name" %>
        </div>

        <div class="form-group">
          <%= f.label :phone, class: "form-label mt-1 mb-3" %>
          <%= f.text_field :phone, class: "form-control", required: true, placeholder: "Enter the phone number" %>
        </div>

        <div class="form-group">
          <%= f.label :email, class: "form-label mt-1 mb-3" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter the Email" %>
        </div>

        <div class="form-group">
          <%= f.label :password, class: "form-label mt-1 mb-3" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "Enter the password", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, class: "form-label mb-3" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Retype the password" %>
        </div>

        <div class="form-group">
          <%= f.label :image, class: "form-label" %>
          <%= f.file_field :image, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :type, "Role" %><br>
          <%= f.select :type, options_for_select(['Customer', 'Admin']), prompt: 'Select a role' %>
        </div>

        <div class="d">
        <div class="actions mt-2 text-end">
          <%= f.submit "Sign up", class: "btn btn-success" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
